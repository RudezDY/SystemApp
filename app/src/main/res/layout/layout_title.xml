<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/color_titlebar">
    <ImageView
        android:id="@+id/backImg"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/back_white"/>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/backImg"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <ImageView
        android:id="@+id/msg_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:src="@mipmap/message"/>
    <ImageView
        android:id="@+id/order_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/msg_img"
        android:layout_marginRight="8dp"
        android:padding="4dp"
        android:src="@mipmap/ico_order"/>
    <ImageView
        android:id="@+id/qq_img"
        android:visibility="gone"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/order_img"
        android:layout_marginRight="8dp"
        android:padding="4dp"
        android:src="@mipmap/icon_qq"/>

</RelativeLayout>
